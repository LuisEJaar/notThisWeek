<%- include('partials/header') -%>
<div class="container">
  <div class="mt-5">
    <div class="">
      <div>
          <p><strong>User Name</strong>: <%= targetUser.userName %></p>
          <p><strong>Email</strong>: <%= targetUser.email %></p>
      </div>
      <% if(targetUser.type == 'player' && visitor.id == targetUser.id) {%>
        <div class="mt-3">
          <h2>Add a character:</h2>
          <!-- Button Deletion Modal -->
          <button type="button" class="shadow ms-3 btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCharacter">
            Create New Character
          </button> 
        </div>
      <%}%>
      <% if(targetUser.type == "dm" && visitor.id == targetUser.id) {%>
        <div class="mt-3">
          <h2>Add a game:</h2>
          <form action="/post/createPost" enctype="multipart/form-data" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="mb-3">
              <label for="caption" class="form-label">Description</label>
              <textarea class="form-control" id="caption" name="caption" required></textarea>
            </div>
            <div class="mb-3">
              <label for="imgUpload" class="form-label">Image</label>
              <input type="file" class="form-control" id="imageUpload" name="file" required>
            </div>
            <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
          </form>
        </div>
      <%} %>
    </div>
    <div class="mt-3">
      <% if(visitor.id != targetUser.id){%>
        <h2>Player <%= targetUser.userName %>'s Games:</h2> 
      <%} else {%>
        <h2>Your Games:</h2>  
      <%}%>
      <ul class="row list-unstyled">
      <% for(var i=0; i<posts.length; i++) {%>
        <li class="justify-content-between mt-3">
          <a href="/post/<%= posts[i]._id%>">
            <figure class="d-flex flex-column align-items-center">
              <img class="img-fluid rounded profileGame" src="<%= posts[i].image%>">
              <figcaption class="text-center"><%= posts[i].title%></figcaption>
            </figure>
          </a>
        </li>
      <% } %>
      </ul>
    </div>
    <div class="mt-3">
      <% if(visitor.id != targetUser.id && targetUser.type != 'dm'){%>
        <h2>Player <%= targetUser.userName %>'s Characters:</h2> 
      <%} else if (targetUser.type != 'dm') {%>
        <h2>Your Characters:</h2>  
      <%}%>
      <% if(targetUser.type != 'dm') {%>
        <ul class="row list-unstyled">
          <% for(var i=0; i < characters.length; i++) {%>
            <li class="justify-content-between mt-3">
              <a href="/character/<%= characters[i]._id%>">
                <figure class="d-flex flex-column align-items-center">
                  <img class="img-fluid rounded profileGame" src="<%= characters[i].image%>">
                  <figcaption class="text-center"><%= characters[i].name%></figcaption>
                </figure>
              </a>
            </li>
          <% } %>
          </ul>
      <%}%>
    </div>   
  </div>
</div>

<!-- Create Character -->
<div class="modal fade" id="createCharacter" tabindex="-1" aria-labelledby="createCharacterLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createCharacterLabel">Tell me about yourself traveler</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/character/create" enctype="multipart/form-data" method="POST">
          <fieldset>
            <div class="mb-3">
              <label for="imgUpload" class="form-label">Image</label>
              <input type="file" class="form-control" id="imageUpload" name="file" required>
            </div>
            <legend>Description:</legend>
            <div class="form-group">
              <label class="mt-2" for="charName">Name:</label>
              <input name="name" type="text" class="form-control" id="charName" placeholder="Name" required>
            </div>

            <div class="form-group">
              <label class="mt-2" for="charClass">Class:</label>
              <input name="class" type="text" class="form-control" id="charClass" placeholder="Class" required>
            </div>

            <div class="form-group">
              <label class="mt-2" for="charAge">Age:</label>
              <input name="age" type="number" class="form-control" id="charAge" placeholder="Age" required>
            </div>

            <div class="form-group">
              <label class="mt-2" for="charRace">Race:</label>
              <input name="race" type="text" class="form-control" id="charRace" placeholder="Race" required>
            </div>
    
            <div class="form-group">
              <label class="mt-2" for="charGnd">Gender:</label>
              <input name="gender" type="text" class="form-control" id="charGnd" placeholder="Gender" required>
            </div>

            <div class="form-group">
              <label class="mt-2" for="charLvl">Level:</label>
              <input name="lvl" type="number" class="form-control" id="charLvl" placeholder="Level" required>
            </div>

            <div class="form-group">
              <label class="mt-2" for="charLvl">Armor Class(ac):</label>
              <input name="ac" type="number" class="form-control" id="ac" placeholder="Armor Class" required>
            </div>
          </fieldset>
          
          <fieldset class="mt-3">
            <legend>Ability Scores</legend>
            <div class="form-group">
              <label for="str">Strength:</label>
              <input name="str" min="0" max="30" type="number" class="form-control" id="str" placeholder="str" required>
            </div>
            <div class="form-group">
              <label class="mt-2" for="dex">Dexterity:</label>
              <input name="dex" type="number" min="0" max="30" class="form-control" id="dex" placeholder="dex" required>
            </div>
            <div class="form-group">
              <label class="mt-2" for="con">Constitution:</label>
              <input name="con" type="number" min="0" max="30" class="form-control" id="con" placeholder="con" required>
            </div>
            <div class="form-group">
              <label class="mt-2" for="int">Intelligence:</label>
              <input name="int" type="number" min="0" max="30" class="form-control" id="int" placeholder="int" required>
            </div>
            <div class="form-group">
              <label class="mt-2" for="wis">Wisdom:</label>
              <input name="wis" type="number" min="0" max="30" class="form-control" id="wis" placeholder="wis" required>
            </div>
            <div class="form-group">
              <label class="mt-2" for="char">Charisma:</label>
              <input name="char" type="number" min="0" max="30" class="form-control" id="char" placeholder="char" required>
            </div>

          </fieldset class="mt-3">
          <legend>Save Proficiences:</legend>
            <div class="form-check form-switch">
              <input name="strSave" class="form-check-input" value="true" type="checkbox" id="strSave">
              <label class="form-check-label" for="strSave">str</label>
            </div>
            <div class="form-check form-switch">
              <input name="dexSave" class="form-check-input" value="true" type="checkbox" id="dexSave">
              <label class="form-check-label" for="dexSave">dex</label>
            </div>
            <div class="form-check form-switch">
              <input name="conSave" class="form-check-input" value="true" type="checkbox" id="conSave">
              <label class="form-check-label" for="conSave">con</label>
            </div>
            <div class="form-check form-switch">
              <input name="intSave" class="form-check-input" value="true" type="checkbox" id="intSave">
              <label class="form-check-label" for="intSave">int</label>
            </div>
            <div class="form-check form-switch">
              <input name="wisSave" class="form-check-input" value="true" type="checkbox" id="wisSave">
              <label class="form-check-label" for="wisSave">wis</label>
            </div>
            <div class="form-check form-switch">
              <input name="charSave" class="form-check-input" value="true" type="checkbox" id="charSave">
              <label class="form-check-label" for="charSave">char</label>
            </div>
          <fieldset>

          </fieldset>

          <fieldset class="mt-3">
            <legend>Proficiences:</legend>
            <div class="form-check form-switch">
              <input name="acrobatics" class="form-check-input" value="true" type="checkbox" id="Acrobatics">
              <label class="form-check-label" for="Acrobatics">Acrobatics</label>
            </div>
            <div class="form-check form-switch">
              <input name="animalHandling" class="form-check-input" value="true" type="checkbox" id="animalHandling">
              <label class="form-check-label" for="animalHandling">Animal Handling</label>
            </div>
            <div class="form-check form-switch">
              <input name="arcana" class="form-check-input" value="true" type="checkbox" id="arcana">
              <label class="form-check-label" for="arcana">Arcana</label>
            </div>
            <div class="form-check form-switch">
              <input name="athletics" class="form-check-input" value="true" type="checkbox" id="athletics">
              <label class="form-check-label" for="athletics">Athletics</label>
            </div>
            <div class="form-check form-switch">
              <input name="deception" class="form-check-input" value="true" type="checkbox" id="deception">
              <label class="form-check-label" for="deception">Deception</label>
            </div>
            <div class="form-check form-switch">
              <input name="history" class="form-check-input" value="true" type="checkbox" id="history">
              <label class="form-check-label" for="history">History</label>
            </div>
            <div class="form-check form-switch">
              <input name="insight" class="form-check-input" value="true" type="checkbox" id="insight">
              <label class="form-check-label" for="insight">Insight</label>
            </div>
            <div class="form-check form-switch">
              <input name="intimidation" class="form-check-input" value="true" type="checkbox" id="intimidation">
              <label class="form-check-label" for="intimidation">Intimidation</label>
            </div>
            <div class="form-check form-switch">
              <input name="investigation" class="form-check-input" value="true" type="checkbox" id="investigation">
              <label class="form-check-label" for="investigation">Investigation</label>
            </div>
            <div class="form-check form-switch">
              <input name="medicine" class="form-check-input" value="true" type="checkbox" id="medicine">
              <label class="form-check-label" for="medicine">Medicine</label>
            </div>
            <div class="form-check form-switch">
              <input name="nature" class="form-check-input" value="true" type="checkbox" id="nature">
              <label class="form-check-label" for="nature">Nature</label>
            </div>
            <div class="form-check form-switch">
              <input name="perception" class="form-check-input" value="true" type="checkbox" id="perception">
              <label class="form-check-label" for="perception">Perception</label>
            </div>
            <div class="form-check form-switch">
              <input name="performance" class="form-check-input" value="true" type="checkbox" id="performance">
              <label class="form-check-label" for="performance">Performance</label>
            </div>
            <div class="form-check form-switch">
              <input name="persuasion" class="form-check-input" value="true" type="checkbox" id="persuasion">
              <label class="form-check-label" for="persuasion">Persuasion</label>
            </div>
            <div class="form-check form-switch">
              <input name="religion" class="form-check-input" value="true" type="checkbox" id="religion">
              <label class="form-check-label" for="religion">Religion</label>
            </div>
            <div class="form-check form-switch">
              <input name="sleightOfHand" class="form-check-input" value="true" type="checkbox" id="sleightOfHand">
              <label class="form-check-label" for="sleightOfHand">Sleight of Hand</label>
            </div>
            <div class="form-check form-switch">
              <input name="stealth" class="form-check-input" value="true" type="checkbox" id="stealth">
              <label class="form-check-label" for="stealth">Stealth</label>
            </div>
            <div class="form-check form-switch">
              <input name="survival" class="form-check-input" value="true" type="checkbox" id="survival">
              <label class="form-check-label" for="survival">Survival</label>
            </div>
          </fieldset>
          <div class="d-flex flex-column">
            <button class="btn btn-success mt-5" type="submit">Adventure awaits</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>